{
    "description": "",
    "private": false,
    "successCode": {
        "outputKey": "purchaseConfirmation",
        "valuePath": "/purchaseReference"
    },
    "inputs": {
        "url": {
            "typeRef": "#/domains/Generic/types/URL",
            "description": "Website entry point.",
            "initial": true
        },
        "pets": {
            "typeRef": "#/domains/PetInsurance/types/Pets"
        },
        "selectedBreedType": {
            "typeRef": "#/domains/PetInsurance/types/BreedType",
            "description": "Select breed typology (Pedigree, Non-Pedigree etc)",
            "sourceOutputKey": "availableBreedTypes",
            "inputMethod": "SelectOne"

        },
        "payment": {
            "typeRef": "#/domains/Generic/types/Payment"
        },
        "owner": {
            "typeRef": "#/domains/PetInsurance/types/Owner"
        },
        "panToken": {
            "typeRef": "#/domains/Generic/types/PanToken"
        },
        "account": {
            "typeRef": "#/domains/Generic/types/Account"
        },
        "finalPriceConsent": {
            "typeRef": "#/domains/Generic/types/PriceConsent",
            "description": "Client's consent for final price, should exactly match the <code>finalPrice</code> object from output.<br/>Automation will not proceed with placing order until the consent is provided.",
            "sourceOutputKey": "finalPrice",
            "inputMethod": "Consent"
        },
        "selectedMaritalStatusOption": {
            "typeRef": "#/domains/PetInsurance/types/MaritalStatusOption",
            "sourceOutputKey": "availableMaritalStatusOptions",
            "inputMethod": "SelectOne"
        },
        "policyOptions": {
            "typeRef": "#/domains/PetInsurance/types/PolicyOption"
        },
        "selectedVoluntaryExcess": {
            "typeRef": "#/domains/PetInsurance/types/VoluntaryExcess",
            "description": "Selected voluntary excess",
            "sourceOutputKey": "availableVoluntaryExcesses",
            "inputMethod": "SelectOne"
        },
        "selectedAddress": {
            "typeRef": "#/domains/PetInsurance/types/Address",
            "sourceOutputKey": "availableAddresses",
            "inputMethod": "SelectOne"
        },
        "selectedCover": {
            "typeRef": "#/domains/PetInsurance/types/Cover",
            "description": "Selected excess protection cover.",
            "sourceOutputKey": "availableCovers",
            "inputMethod": "SelectOne"
        },
        "selectedCoverType": {
            "typeRef": "#/domains/PetInsurance/types/CoverType",
            "sourceOutputKey": "availableCoverTypes",
            "inputMethod": "SelectOne"
        },
        "selectedVetFeeLimit": {
            "typeRef": "#/domains/PetInsurance/types/VetFeeLimit",
            "sourceOutputKey": "availableVetFeesLimit",
            "inputMethod": "SelectOne"
        },
        "selectedCoverOptions": {
            "typeRef": "#/domains/PetInsurance/types/CoverOptions",
            "sourceOutputKey": "availableCoverOptions",
            "inputMethod": "SelectMany"

        },
        "selectedPaymentTerm": {
            "typeRef": "#/domains/PetInsurance/types/PaymentTerm",
            "sourceOutputKey": "availablePaymentTerms",
            "inputMethod": "SelectOne"
        }
    },
    "outputs": {
        "availableBreedTypes": {
            "typeRef": "#/domains/PetInsurance/types/BreedTypes"
        },
        "finalPrice": {
            "description": "Emitted immediately before placing order, when final price is available.<br/>Automation will request <code>finalPriceConsent</code> input which should match this object.",
            "typeRef": "#/domains/Generic/types/PriceConsent"
        },
        "availableMaritalStatusOptions": {
            "typeRef": "#/domains/PetInsurance/types/MaritalStatusOptions"
        },
        "availableVoluntaryExcesses": {
            "typeRef": "#/domains/PetInsurance/types/VoluntaryExcesses"
        },
        "availableAddresses": {
            "typeRef": "#/domains/PetInsurance/types/Addresses"
        },
        "availableCovers": {
            "typeRef": "#/domains/PetInsurance/types/Covers"
        },
        "availableCoverTypes": {
            "typeRef": "#/domains/PetInsurance/types/CoverTypes"
        },
        "availableVetFeesLimit": {
            "typeRef": "#/domains/PetInsurance/types/VetFeesLimit"
        },
        "availableCoverOptions": {
            "typeRef": "#/domains/PetInsurance/types/CoverOptions"
        },
        "availablePaymentTerms": {
            "typeRef": "#/domains/PetInsurance/types/PaymentTerms"

        },
        "purchaseConfirmation": {
            "typeRef": "#/domains/PetInsurance/types/PurchaseConfirmation"
        }
    },
    "types": {
        "Pets": {
            "type": "array",
            "description": "An array with flags and informations about pets",
            "pii": true,
            "minItems": 1,
            "maxItems": 3,
            "items": {
                "$ref": "#/domains/PetInsurance/types/Pet"
            }
        },
        "Pet": {
            "type": "object",
            "description": "Flight fare information.",
            "additionalProperties": false,
            "properties": {
                "petName": {
                    "type": "string",
                    "description": "Pet Name",
                    "example": "Rex"
                },
                "petType": {
                    "type": "string",
                    "description": "",
                    "example": "dog"
                },
                "petGender": {
                    "type": "string",
                    "description": "",
                    "example": "Male"
                },
                "breedName": {
                    "type": "string",
                    "description": "Your pet breed",
                    "example": "Afgan"
                },
                "dateOfBirth": {
                    "type": "string",
                    "description": "Passenger's date of birth in YYYY-MM-DD format.",
                    "format": "date",
                    "example": "1976-01-27"
                },
                "petPrice": {
                    "type": "string",
                    "default": "",
                    "description": "The price given for the pet"
                },
                "relatedQuestions": {
                    "properties": {
                        "isSpayedOrNeutered": {
                            "type": "boolean",
                            "default": false
                        },
                        "hasChipOrTag": {
                            "type": "boolean",
                            "default": false
                        },
                        "isKeptAtYourAddress": {
                            "type": "boolean",
                            "default": false
                        },
                        "anyBehaviourComplains": {
                            "type": "boolean",
                            "default": false
                        },
                        "indoorPet": {
                            "type": "boolean",
                            "default": false
                        },
                        "isYourPetHealthy": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                }
            }
        },
        "BreedType": {
            "type": "string",

            "description": ""
        },

        "BreedTypes": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/BreedType"
            }
        },
        "PolicyOption": {
            "type": "object",
            "description": "",
            "properties": {
                "petName": {
                    "type": "string",
                    "description": "Cover Start Date",
                    "example": "2019-04-02"
                },
                "numberOfPetsOwned": {
                    "type": "number",
                    "description": "Cover Start Date",
                    "example": "2019-04-02"
                },
                "jointPolicyHolder": {
                    "type": "boolean",
                    "default": false
                }
            },
            "additionalProperties": false
        },
        "Address": {
            "type": "string"
        },
        "Addresses": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/Address"
            }
        },
        "Cover": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/Cover"
            }
        },
        "Covers": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/Cover"
            }
        },
        "MaritalStatusOption": {
            "type": "string",
            "description": ""

        },
        "MaritalStatusOptions": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/MaritalStatusOption"
            }
        },
        "VoluntaryExcesses": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "maxItems": 3,
            "items": {
                "$ref": "#/domains/PetInsurance/types/VoluntaryExcessItem"
            }
        },
        "VoluntaryExcessItem": {
            "type": "object",
            "description": "Flight fare information.",
            "additionalProperties": false,
            "properties": {

                "type": {
                    "type": "string",
                    "description": ""
                },
                "petType": {
                    "type": "string",
                    "description": "",
                    "example": "dog"
                },
                "contents": {
                    "type": "string",
                    "description": ""
                },
                "priceLine": {
                    "type": "string",
                    "description": "",
                    "example": "Afgan"
                }

            }
        },
        "CoverTypes": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/CoverType"
            }
        },
        "CoverType": {
            "type": "object",
            "description": "",
            "additionalProperties": false,
            "properties": {
                "coverName": {
                    "type": "string",
                    "description": "",
                    "example": "Accident Only"
                },
                "price": {
                    "typeRef": "#/domains/Generic/types/Price"
                }
            },
            "required": [
                "text",
                "price"
            ]
        },
        "PaymentTerm": {
            "type": "string",
            "description": ""
        },
        "PaymentTerms": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/PaymentTerm"
            }
        },
        "VetFeeLimit": {
            "type": "object",
            "description": "",
            "properties": {
                "text": {
                    "type": "string",
                    "description": "",
                    "example": "Accident Only"
                },
                "price": {
                    "typeRef": "#/domains/Generic/types/Price"
                }
            },
            "required": [
                "text",
                "price"
            ]
        },
        "VetFeesLimit": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/VetFeeLimitItem"
            }
        },
        "VetFeeLimitItem": {
            "type": "object",
            "description": "",
            "additionalProperties": false,
            "properties": {
                "text": {
                    "type": "string",
                    "description": "",
                    "example": "Classic"
                },
                "price": {
                    "typeRef": "#/domains/Generic/types/Price"
                }
            },
            "required": [
                "text",
                "price"
            ]
        },
        "VoluntaryExcess": {
            "type": "object",
            "description": "",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "",
                    "example": "Accident Only"
                },
                "details": {
                    "type": "string",
                    "description": "",
                    "example": ""
                },
                "priceLine": {
                    "type": "string",
                    "description": "",
                    "example": ""
                }

            },
            "required": [
                "text",
                "price"
            ]
        },
        "CoverOptions": {
            "type": "array",
            "description": "",
            "pii": true,
            "minItems": 1,
            "items": {
                "$ref": "#/domains/PetInsurance/types/CoverOption"
            }
        },
        "CoverOption": {
            "type": "object",
            "description": "",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "description": "",
                    "example": "dog"
                },
                "details": {
                    "type": "string",
                    "description": "",
                    "example": "Male"
                },
                "price": {
                    "typeRef": "#/domains/Generic/types/Price"
                }
            },

                "required": [
                    "text",
                    "price"
                ]
            
        },
        "Owner": {
            "type": "object",
            "pii": true,
            "additionalProperties": false,
            "properties": {
                "person": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "enum": [
                                "mr",
                                "miss",
                                "ms",
                                "mrs"
                            ]
                        },
                        "firstName": {
                            "type": "string",
                            "description": "",
                            "example": "Jon"
                        },
                        "middleName": {
                            "type": "string",
                            "default": "",
                            "description": ""
                        },
                        "lastName": {
                            "type": "string",
                            "description": "",
                            "example": "Doe"
                        },
                        "dateOfBirth": {
                            "type": "string",
                            "description": "Passenger's date of birth in YYYY-MM-DD format.",
                            "format": "date",
                            "example": "1976-01-27"
                        }
                    }
                }
            },

            "Address": {
                "type": "object",
                "properties": {
                    "property": {
                        "number": {
                            "type": "string",
                            "description": "",
                            "example": "123"
                        },
                        "name": {
                            "type": "string",
                            "default": "",
                            "description": ""

                        },
                        "postcode": {
                            "type": "string",
                            "description": "",
                            "example": "W1W 5BB"
                        }
                    }
                }
            }

        },


        "PurchaseConfirmation": {
            "type": "object",
            "description": "Information gathered on the \"confirmation\" page.",
            "properties": {
                "purchaseReference": {
                    "type": "string",
                    "description": "Reference code grabbed from the page.",
                    "example": "RL2XYZ"
                },
                "message": {
                    "type": "string",
                    "description": "The confirmation message.",
                    "example": "Thank you for using UBIO Insurance. Your quote is ABC123 and purchase reference is DEF456."
                },
                "price": {
                    "$ref": "#/domains/Generic/types/Price",
                    "description": "Price, if found on the confirmation page."
                }
            },
            "additionalProperties": false,
            "required": [
                "purchaseReference"
            ]
        }
    },

    "errors": [{
            "code": "QuoteNotFound",
            "category": "client",
            "description": "Given quote was not found by the insurer."
        },
        {
            "code": "RegistrationNumberInvalid",
            "category": "client",
            "description": "Registration number is not accepted by the website"
        },
        {
            "code": "RegistrationNumberRequired",
            "category": "client",
            "description": "Registration number is required by the website"
        },
        {
            "code": "DirectDebitRejected",
            "category": "client",
            "description": "Direct debit details provided have been rejected by the website."
        },
        {
            "code": "PolicyAlreadyPurchased",
            "category": "client",
            "description": "The policy has already been purchased."
        },
        {
            "code": "BreedTypeRequired",
            "category": "client",
            "description": "Breed type is required by the website"
        }
    ]

}