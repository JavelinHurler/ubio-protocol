{
    "description": "Allows automating hotel booking cancellation on individual suppliers and OTAs.",
    "private": false,
    "inputs": {
        "url": {
            "typeRef": "#/domains/Generic/types/URL",
            "initial": true,
            "description": "Website entry point. Should be a deep link to either package selection page, or to payment page."
        },
        "booking": {
            "typeRef": "#/domains/CancellationTVG/types/Booking"
        },
        "login": {
            "typeRef": "#/domains/CancellationTVG/types/Login"
        }
    },
    "outputs": {
        "cancellationConfirmation": {
            "typeRef": "#/domains/CancellationTVG/types/Confirmation"
        },
        "job_outputs": {
            "typeRef": "#/domains/CancellationTVG/types/JobOutputs"
        }  
    },
    "types": {
        "JobOutputs": {
            "type": "object",
            "properties": {
                "clickout_price": { "$ref": "#/domains/Generic/types/Price" },
                "item_id": {
                    "type": "string"
                },
                "clickout_timestamp": {
                    "type": "string"
                },
                "trv_reference": {
                    "type": "string"
                },
                "advertiser_lp_price": { "$ref": "#/domains/Generic/types/Price" },
                "arrival_date": {
                    "type": "string"
                },
                "departure_date": {
                    "type": "string"
                },
                "booking_timestamp": {
                    "type": "string"
                },
                "booking_price": { "$ref": "#/domains/CancellationTVG/types/BookingPrice" },
                "is_express_booking": {
                    "type": "boolean"
                },
                "number_of_rooms": {
                    "type": "integer"
                },
                "locale": {
                    "type": "string"
                },
                "advertiser_id": {
                    "type": "string"
                },
                "booking_id": {
                    "type": "string"
                },
                "booking_url": {
                    "type": "string"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "BookingPrice": {
            "type": "object",
            "properties": {
                "net": { "$ref": "#/domains/Generic/types/Price" },
                "tax": {
                    "type": "string"
                },
                "gross": { "$ref": "#/domains/Generic/types/Price" }
            },
            "required": [],
            "additionalProperties": false
        },
        "Confirmation": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "Booking": {
            "type": "object",
            "properties": {
                "bookingReference": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            },
            "required": [],
            "additionalProperties": false
        },
        "Login": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "format": "email"
                }
            },
            "required": [],
            "additionalProperties": false
        }
    },
    "errors": []
}
