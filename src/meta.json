{
    "$schema": "http://json-schema.org/draft-06/schema",
    "type": "object",
    "properties": {
        "$id": {
            "type": "string"
        },
        "domains": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/Domain"
            }
        }
    },
    "required": [
        "domains"
    ],
    "additionalProperties": false,
    "definitions": {
        "TypeId": {
            "type": "string",
            "pattern": "^#[A-Z][a-zA-Z0-9]+$"
        },
        "TypeRef": {
            "type": "string",
            "pattern": "^#/domains/[A-Z][a-zA-Z0-9]+/types/[A-Z][a-zA-Z0-9]+$"
        },
        "Domain": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "private": {
                    "type": "boolean"
                },
                "inputs": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/SimpleDef"
                    }
                },
                "outputs": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/SimpleDef"
                    }
                },
                "types": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/TypeDef"
                    }
                }
            },
            "required": [
                "description",
                "inputs",
                "outputs",
                "types"
            ],
            "additionalProperties": false
        },
        "SimpleDef": {
            "properties": {
                "typeRef": { "$ref": "#/definitions/TypeRef" },
                "description": { "type": "string" }
            },
            "required": ["typeRef"],
            "additionalProperties": false
        },
        "TypeDef": {
            "allOf": [
                { "$ref": "http://json-schema.org/draft-06/schema" },
                {
                    "properties": {
                        "type": { "$ref": "http://json-schema.org/draft-06/schema#/type" }
                    },
                    "required": [
                        "type"
                    ]
                }
            ]
        }
    }
}

